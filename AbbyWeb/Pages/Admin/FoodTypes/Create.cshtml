@page
@model AbbyWeb.Pages.Admin.FoodTypes.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Category</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            Name: <input asp-for="@Model.FoodType.Name" class="form-control" />
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px;">Create</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px;">Return to List</a>
    </div>
</form>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}